# App
BASE_URL=http://localhost:5173

# Hack Club Auth (https://auth.hackclub.com/developer/apps)
HACK_CLUB_CLIENT_ID=your_client_id
HACK_CLUB_CLIENT_SECRET=your_client_secret

# Airtable (optional - for resolution submissions)
AIRTABLE_API_TOKEN=your_airtable_api_token
AIRTABLE_BASE_ID=your_base_id
AIRTABLE_TABLE_ID=your_table_id

# Season Configuration
# Only SEASON_STARTS is required - everything else is auto-calculated
SEASON_STARTS="2026-01-01"

# Optional overrides (these have sensible defaults):
# SEASON_NAME="Resolution S1"        # default: "Resolution"
# SEASON_SLUG="s1"                   # default: "s1"
# SEASON_TOTAL_WEEKS="8"             # default: 8
# SEASON_SIGNUP_BUFFER_DAYS="20"     # default: 20 (signup opens 20 days before start)
